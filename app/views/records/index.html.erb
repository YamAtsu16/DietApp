<%= render "shared/header" %>

<div class="record-main">
  <%= month_calendar events: @records do |date, records| %>
    <%= date.day %>
    <% records.each do |data| %>
      <div class="total-calories">
        <%= link_to "#{data.total_calorie} kcal", data %>
      </div>
      <div class="total-pfc">
        <%= link_to "P #{data.total_protein}", data %>
        <%= link_to "F #{data.total_fat}", data %>
        <%= link_to "C #{data.total_carbo}", data %>
      </div>
    <% end%>
  <% end %>
</div>